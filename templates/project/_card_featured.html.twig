<div role='button' class="position-relative">

    <div class="scrim cover_160 position-absolute bottom-0 start-50 translate-middle-x"></div>

    {% if project.featuredImage %}
    <img src="{{ vich_uploader_asset(project, 'featuredImageFile') | imagine_filter(filter) }}" class="{{ cover }}"
        alt="{{ project.name }}">
    {% else %}
    <img src="{{ vich_uploader_asset(project, 'imageFile') | imagine_filter(filter) }}" class="{{ cover }}"
        alt="{{ project.name }}">
    {% endif %}

    <div class="position-absolute bottom-0 start-0 p-4 w-100 d-flex align-items-center justify-content-between">

        <div class="text-white text_shadow fs_1650">
            <span class="fw_700 f_serif">{{ project.client.name }}</span> - {{ project.name }}
        </div>

        <div class="">
            {% for category in project.category %}
            <div class="badge bg-black text-white me-1">{{ category.name }}</div>
            {% endfor %}
        </div>

    </div>

    <a data-bs-toggle="modal" data-bs-target="#modal_{{ project.id }}">
        <div class="{{ cover }} position-absolute bottom-0 start-50 translate-middle-x"></div>
    </a>

