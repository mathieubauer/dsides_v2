<div class="form-widget">
    {% for image in field.value %}
        {% if image %}
            <a href="#" class="ea-lightbox-thumbnail" data-ea-lightbox-content-selector="#ea-lightbox-{{ image.id }}">
                <img src="/uploads/images/projects/attachments/{{ image.image }}" class="img-fluid" style="width: 8%;" alt="images-{{ image.id }}"/>
            </a>

            <div id="ea-lightbox-{{ image.id }}" class="ea-lightbox">
                <img src="/uploads/images/projects/attachments/{{ image.image }}" alt="images-{{ image.id }}"/>
            </div>
        {% else %}
            <div>
                -
            </div>
        {% endif %}
    {% endfor %}
</div>
