{% extends 'base.html.twig' %}

{% block title %}Dsides Vid√©o{% endblock %}

{% block body %}
<div class="container-fluid pt-5 pb-5 bg-black">
        <div class="m-5 pt-5 pb-5">
                {% for els in video.data[:1] %}
                        <h1 class="text-center text-white text_small_responsive">{{ els.user.bio }}</h1>
                {% endfor %}
        </div>
</div>
<div class="row row-cols-1 row-cols-md-3 g-4 py-5 px-2">
    {% for elements in video.data %}
        <div class="col">
            <div class="card rounded-top">
                <div class="ratio ratio-16x9 card-img-top">
                    <iframe
                        src="{{ elements.player_embed_url }}"
                        width="{{ elements.pictures.sizes[2].width }}"
                        height="{{ elements.pictures.sizes[2].width }}"
                        class="rounded-top"
                        webkitallowfullscreen
                        mozallowfullscreen
                        allowfullscreen>
                    </iframe>
                </div>

                <div class="card-body bg-black rounded-bottom">
                        <h5 class="lead text_small_responsive text-white">{{ elements.name }}</h5>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}
